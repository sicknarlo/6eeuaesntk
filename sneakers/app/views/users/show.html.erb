<h1><%= @user.username %>'s shoe closet</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Model</th>
    <th>Year</th>
    <th>When I Bought It</th>
  </tr>
  <% current_user.shoes.each do |shoe| %>
  <tr>
    <th><%= shoe.brand %></th>
    <th><%=shoe.model %></th>
    <th><%=shoe.year %></th>
    <th><%=shoe.purchase_date %></th>
  </tr>
  <% end %>
</table>

<br>
<%= link_to "Add a pair of shoes!", new_user_shoe_path(@user) %>
